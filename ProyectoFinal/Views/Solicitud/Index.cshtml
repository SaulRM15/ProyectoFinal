@model IEnumerable<ProyectoFinal.Dominio.Entidades.Solicitud>

@{
    ViewData["Title"] = "Solicitudes";
}

<h1>Solicitudes</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nueva Solicitud</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Descripción</th>
            <th>Usuario Asignado</th>
            <th>Estado</th>
            <th>Fecha de Creación</th>
            <th>Fecha de Aprobación</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Descripcion</td>
                <td>@item.UsuarioAsignado.Nombre</td>
                <td>@item.Estado</td>
                <td>@item.FechaCreacion</td>
                <td>@item.FechaAprobacion</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
