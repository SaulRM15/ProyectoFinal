@model ProyectoFinal.Dominio.Entidades.Solicitud

@{
    ViewData["Title"] = "Eliminar Solicitud";
}

<h1>Eliminar Solicitud</h1>

<h3>¿Estás seguro de que deseas eliminar esta solicitud?</h3>

<div>
    <h4>Solicitud</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Descripción
        </dt>
        <dd class="col-sm-10">
            @Model.Descripcion
        </dd>
        <dt class="col-sm-2">
            Usuario Asignado
        </dt>
        <dd class="col-sm-10">
            @Model.UsuarioAsignado?.Nombre ?? "No asignado"
        </dd>
        <dt class="col-sm-2">
            Estado
        </dt>
        <dd class="col-sm-10">
            @Model.Estado
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
