@model ProyectoFinal.Dominio.Entidades.Solicitud

@{
    ViewData["Title"] = "Detalles de la Solicitud";
}

<h1>Detalles de la Solicitud</h1>

<div>
    <h4>Solicitud</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Descripción
        </dt>
        <dd class="col-sm-10">
            @Model.Descripcion
        </dd>
        <dt class="col-sm-2">
            Usuario Asignado
        </dt>
        <dd class="col-sm-10">
            @Model.UsuarioAsignado.Nombre
        </dd>
        <dt class="col-sm-2">
            Estado
        </dt>
        <dd class="col-sm-10">
            @Model.Estado
        </dd>
        <dt class="col-sm-2">
            Fecha de Creación
        </dt>
        <dd class="col-sm-10">
            @Model.FechaCreacion
        </dd>
        <dt class="col-sm-2">
            Fecha de Aprobación
        </dt>
        <dd class="col-sm-10">
            @Model.FechaAprobacion
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-primary">Volver a la lista</a>
</div>
